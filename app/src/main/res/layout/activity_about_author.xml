<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_about_author"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ly_toolbar"
        layout="@layout/toolbar" />

    <!-- 头像 -->
    <ImageView
        android:id="@+id/ic_author_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/ly_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/xuhongchuan" />

    <!-- 作者 -->
    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_author_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/author_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <!-- 格言/座右铭 -->
    <TextView
        android:id="@+id/tv_motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_author_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/motto" />

    <!-- 简书 -->
    <TextView
        android:id="@+id/tv_jianshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_motto"
        android:layout_alignLeft="@+id/tv_mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/jianshu" />

    <!-- 微博 -->
    <TextView
        android:id="@+id/tv_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_jianshu"
        android:layout_alignLeft="@id/tv_mail"
        android:layout_marginTop="10dp"
        android:text="@string/weibo" />

    <!-- 邮箱 -->
    <TextView
        android:id="@+id/tv_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_weibo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/mail" />

</RelativeLayout>